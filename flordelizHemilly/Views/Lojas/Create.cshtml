@model flordelizHemilly.Models.Loja

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro loja</h1>

<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                Cadastro loja
                <small>Insira informações abaixo</small>
            </h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">

                <div class="col-md-12">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Nome: </label>
                                <input asp-for="Nome" class="form-control" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nome fantasia: </label>
                                <input asp-for="NomeFantasia" class="form-control" />
                                <span asp-validation-for="NomeFantasia" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index">Voltar para lista</a>
        </div>

    </div>

</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
